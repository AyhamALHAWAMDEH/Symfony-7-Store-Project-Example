{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}

	<style>
		a {
			color: #491C52;
			text-decoration: none;
		}
	</style>
	<div class="container my-3 py-3">
		<h1>Contact index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Subject</th>
					<th>Message</th>
					<th>CreatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>
						<td>{{ contact.id }}</td>
						<td>{{ contact.name }}</td>
						<td>{{ contact.email }}</td>
						<td>{{ contact.subject }}</td>
						<td>{{ contact.message }}</td>
						<td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>

						<td>
							<div style="display: inline-block;">
								<a href="{{ path('app_contact_crud_show', {'id': contact.id}) }}" class="mx-2" data-toggle="tooltip" data-placement="top" title="Show">
									<i class="far fa-eye"></i>
								</a>
							</div>
							<div style="display: inline-block;">
								{{ include('contact_crud/_delete_form.html.twig') }}
							</div>
						</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
