{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<style>
		a {
			color: #491C52;
			text-decoration: none;
		}
	</style>
	<div class="container my-3 py-3">
		<h1>Contact</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ contact.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ contact.name }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ contact.email }}</td>
				</tr>
				<tr>
					<th>Subject</th>
					<td>{{ contact.subject }}</td>
				</tr>
				<tr>
					<th>Message</th>
					<td>{{ contact.message }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex align-items-center">
			<a href="{{ path('app_contact_crud_index') }}">
				<i class="fas fa-reply"></i>back to list</a>

			{{ include('contact_crud/_delete_form.html.twig') }}
		</div>
	</div>

{% endblock %}
