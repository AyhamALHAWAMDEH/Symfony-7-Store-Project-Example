<div class="container">
	{{ form_start(form) }}
	<style>
		.btn-save {
			background-color: #EEE029;
			color: #491C52;
			border: none;
			font-weight: 700;
			padding: 10px 20px;
		}

		.btn-save:hover {
			background-color: #491C52;
			color: #EEE029;
		}
	</style>


	<div class="my-3">
		<label for="">First name</label>
		{{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">Last name</label>
		{{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">City</label>
		{{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">Postal code</label>
		{{ form_row(form.postalCode, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">Street address</label>
		{{ form_row(form.streetAddress, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">Address complement</label>
		{{ form_row(form.addressComplement, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="my-3">
		<label for="">Phone number</label>
		{{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
	</div>
	<button class="btn btn-primary btn-save btn-lg btn-sm mb-3">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}
