<form method="post" action="{{ path('app_category_crud_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button type="submit" class="btn" data-toggle="tooltip" data-placement="top" title="Delete" style="color: #491C52;">
    <i class="fas fa-trash"></i>
</button>
</form>
