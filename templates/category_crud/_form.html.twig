<div class="container">
	{{ form_start(form) }}

	<style>
		.btn-save {
			background-color: #EEE029;
			color: #491C52;
			border: none;
			font-weight: 700;
			padding: 10px 20px;
		}

		.btn-save:hover {
			background-color: #491C52;
			color: #EEE029;
		}
	</style>

	<div class="my-3">

		<label for="">Category Name</label>
		{{form_row(form.categoryName, {'attr':{'class':'form-control'}})}}
	</div>

	<div class="my-3">
		<label for="">Category Image</label>
		{{form_row(form.categoryImage, {'attr':{'class':'form-control'}})}}
	</div>

	<button class="btn btn-primary btn-save btn-lg btn-sm mb-3">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}
</div>
