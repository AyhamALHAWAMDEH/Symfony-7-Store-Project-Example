{% extends 'base.html.twig' %}

{% block title %}Offer
{% endblock %}

{% block body %}

	<style>
		a {
			color: #491C52;
			text-decoration: none;
		}
	</style>
	<style>
		a {
			color: #491C52;
			text-decoration: none;
		}
	</style>
	<div class="container my-3 py-3">
		<h1>Offer</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ offer.id }}</td>
				</tr>
				<tr>
					<th>Type</th>
					<td>{{ offer.type }}</td>
				</tr>
				<tr>
					<th>Value</th>
					<td>{{ offer.value }}</td>
				</tr>
				<tr>
					<th>StartDate</th>
					<td>{{ offer.startDate ? offer.startDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>EndDate</th>
					<td>{{ offer.endDate ? offer.endDate|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex align-items-center">
			<a href="{{ path('app_offer_crud_index') }}">
				<i class="fas fa-reply"></i>back to list</a>

			<a href="{{ path('app_offer_crud_edit', {'id': offer.id}) }}" class=" mx-5" data-toggle=" tooltip" data-placement=" top" title=" edit">
				<i class="fas fa-edit"></i>
			</a>

			{{ include('offer_crud/_delete_form.html.twig') }}

		</div>
	</div>
{% endblock %}
